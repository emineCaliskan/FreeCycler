<div class="container container-fluid page-container">
  <div class="row">
    <div class="col-lg-12">

      <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <h3>Profil Düzenle</h3>
        </div>
      </div>

      <form class="form-horizontal" role="form" action="/users/editProfilePost" method="POST" enctype="multipart/form-data">

        <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />



        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">İsim:</label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="name" placeholder="İsim" value="<%= @user.name %>" />
          </div>
        </div>

        <div class="form-group">
          <label for="profilePhotoUrl" class="col-sm-2 control-label">Profil Resmi:</label>
          <div class="col-sm-10">
            <input class="form-control" type="file" name="profilePhotoUrl" id="profilePhotoUrl" />
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" name="submit" class="btn btn-success">Kaydet</button>
          </div>
        </div>

      </form>


    </div>
  </div>
</div>