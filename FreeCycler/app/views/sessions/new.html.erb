<div class="container page-container">
  <div class="row">

    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <h3>Giriş</h3>
      </div>
    </div>

    <div class="col-md-12">

      <%= form_tag sessions_path, :class => 'form-horizontal', :role => 'form' do  %>

      <div class="form-group">
        <!-- <label for="name" class="col-sm-2 control-label">İsim</label> -->
        <%= label_tag :email, nil, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <!-- <input type="text" name="name" class="form-control" id="name" placeholder="İsim" value="" /> -->
          <%= text_field_tag :email, nil, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <!-- <label for="name" class="col-sm-2 control-label">İsim</label> -->
        <%= label_tag :password, nil, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <!-- <input type="text" name="name" class="form-control" id="name" placeholder="İsim" value="" /> -->
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" name="submit" class="btn btn-success">Giriş</button>
        </div>
      </div>

      <% end %>



    </div>

  </div>
</div>